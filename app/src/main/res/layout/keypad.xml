<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:ems="20"
        android:inputType="number"
        android:text="tel:"
        tools:layout_editor_absoluteY="238dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/keypad4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keypad1" />

    <ImageButton
        android:id="@+id/keypad7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad7"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageButton
        android:id="@+id/keypadstar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypadstar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="178dp" />

    <ImageButton
        android:id="@+id/keypad6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad6"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="60dp" />

    <ImageButton
        android:id="@+id/keypad8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad8"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageButton
        android:id="@+id/keypad9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad9"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageButton
        android:id="@+id/keypad0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad0"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="178dp" />

    <ImageButton
        android:id="@+id/keypadsharp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypadsharp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="178dp" />

    <ImageButton
        android:id="@+id/keypad1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/keypad5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad5"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="60dp" />

    <ImageButton
        android:id="@+id/keypad2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad2"
        app:layout_constraintLeft_toRightOf="@+id/keypad1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/keypad3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/keypad3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/keypad2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>